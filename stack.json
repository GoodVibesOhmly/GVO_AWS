{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Opolis Build and Deploy System",
    "Parameters": {
        "LambdaDeployStack": {
            "Type": "String",
            "Default": "opolis-build-lambda",
            "Description": "Stack name containing lambda deployment bucket"
        },
        "LambdaVersion": {
            "Type": "String",
            "Description": "Lambda zip object version"
        }
    },
    "Resources": {
        "Lambda": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Code": {
                    "S3Bucket": { "Fn::ImportValue": { "Fn::Sub": "${LambdaDeployStack}-bucket" } },
                    "S3Key": "handler.zip",
                    "S3ObjectVersion": { "Ref": "LambdaVersion" }
                },
                "Description": "Opolis Build source control event handler",
                "Handler": "handler",
                "Role": { "Fn::GetAtt": [ "ExecutionRole", "Arn" ] },
                "Runtime": "go1.x"
            }
        },
        "ExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [{
                        "Effect": "Allow",
                        "Principal": { "Service": [ "lambda.amazonaws.com" ] },
                        "Action": [ "sts:AssumeRole" ]
                    }]
                },
                "Path": "/",
                "Policies": [{
                    "PolicyName": "root",
                    "PolicyDocument": {
                        "Version": "2012-10-17",
                        "Statement": [{
                            "Effect": "Allow",
                            "Action": [ "logs:*" ],
                            "Resource": "arn:aws:logs:*:*:*"
                        }]
                    }
                }]
            }
        }
    }
}
