{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Deployment Infrastructure for Opolis Build Lambda Functions",
    "Resources": {
        "LambdaBucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "AccessControl": "Private",
                "BucketName": { "Fn::Sub": "${AWS::StackName}" },
                "VersioningConfiguration": {
                    "Status": "Enabled"
                }
            }
        }
    },
    "Outputs": {
        "BucketName": {
            "Description": "Lambda destination bucket name",
            "Value": { "Ref": "LambdaBucket" },
            "Export": {
                "Name": { "Fn::Sub": "${AWS::StackName}-bucket" }
            }
        }
    }
}
